<messaging:emailTemplate subject="Approval Email From {!relatedTo.name}" recipientType="User" relatedToType="employee__c">
    <messaging:htmlEmailBody >
        <html>
            <head></head>
            <body>
                <p> Dear {!recipient.name},</p>
                <p>
                    {!relatedTo.name} has a request !
                </p>
                <p>
                    Reason:<br />
                    {!relatedTo.Description__c}
                </p>
                <p>
                    Approval Status:<br />
                    {!relatedTo.Approval_Status__c}
                </p>

                <table border="0" cellpadding="0" cellspacing="0">
                        <tr>
                            <td>             
                                <button id="apprFunc">Approve</button>
                            </td>
                            <td>
                                <input type="text" id="ip" />
                            </td>
                        </tr>
                </table>

                <script>
                   document.getElementById('apprFunc').addEventListener('Click', func(event)){
                       document.getElementById('ip').innerHTML += 'Rejected';
                       //event.preventDefault();
                   }
                </script>
            </body>
        </html>
    </messaging:htmlEmailBody>
</messaging:emailTemplate>